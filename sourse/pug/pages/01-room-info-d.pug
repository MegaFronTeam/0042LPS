extends ../layout/main.pug

include ../blocks/sObject/_sObject.pug

//- include ../blocks/sContact/_sContact.pug
//- include ../blocks/sForm/_sForm.pug
//- include ../blocks/sForm/_sForm.pug
include ../blocks/sCatalog/_sCatalog.pug
include ../blocks/sObjectDetails/_sObjectDetails.pug
include ../blocks/sPageInfo/_sPageInfo.pug
include ../blocks/sMainInfo/_sMainInfo.pug

block variables
	- let  mainPage= 'room-page' 
	- let  bg= '01-3-house.jpg'

block title
	- let  title= '01-room-info-d'
	title= title
block pagecontent
	//- +mob-mnu()

	main
		+page-head({
			items: ['Объекты', 'ЖК видный', 'Дом №1','Подъезд №2','Этаж №2','Квартира №32','Кухня №1'],
			edit: {},
			t: 'Кухня',
			badge: '33%',
			stat: ' ',
			date: ' ',
		})
		+sObjectDetails()
			+e.header
				+detailsWithToggle()
					mixin item(key, val, warning)
						+e.col.col-md-auto
							+e.item
								span!= key
								p(class=(warning ? 'text-danger' : ''))
									if warning
										+icon("warning")
									!= val
					+e.stats-row--without-span.row
						+item('Этаж', '7 эт')
						+item('Квартиры', '728 кв')
						+item('Помещения', '1350 пом')
						+item('Площадь', 'S 3440 м²')
		+sMainInfo4