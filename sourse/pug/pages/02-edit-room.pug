extends ../layout/main.pug

include ../blocks/sCreateObject/_sCreateObject.pug
 
//- include ../blocks/sContact/_sContact.pug
//- include ../blocks/sForm/_sForm.pug
//- include ../blocks/sForm/_sForm.pug
//- include ../blocks/sCatalog/_sCatalog.pug

block variables
	- let  mainPage= 'createObject-page' 
	- let  bg= 'main.jpg'
	- let  createObject = true

block title
	- let  title= 'Создание объекта'
	title= title
block pagecontent
	//- +mob-mnu()
	main
		+sCreateObject({
			startDate: true,
			endDate: true,
			author: true,
			dateCreate: true,
			dateEdit: true,
			btns: true
		})
			h2 Редактирование помещения
			+b.form-wrap
				+e.main-row.row
					.col-12
						+customInput('Введите название', 'text')
					.col-12
						+input('Введите описание объекта', 'textarea')
					.col-12
						+b.plan-block
							img.res-i(src="img/plan-d.png", alt="")
							+e.info
								p.row
									span.col Площадь
									span.col-auto 32
								p.row
									span.col Площадь стен
									span.col-auto 324
								p.row
									span.col Площадь потолка
									span.col-auto 322
								p.row
									span.col Площадь пола
									span.col-auto 322
								+e.edit(href='./react-planner/demo/dist/index.html' target='_blank')
									| Редактировать чертеж
									+icon('edit')
		.close-btn: +icon('close')
      



