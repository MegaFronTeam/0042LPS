extends ../layout/main.pug

include ../blocks/sObject/_sObject.pug

//- include ../blocks/sContact/_sContact.pug
//- include ../blocks/sForm/_sForm.pug
//- include ../blocks/sForm/_sForm.pug
include ../blocks/sCatalog/_sCatalog.pug
include ../blocks/sObjectDetails/_sObjectDetails.pug

block variables
	- let  mainPage= 'main-page' 
	- let  bg= '01-3-house.jpg'

block title
	- let  title= 'Дом №1'
	title= title
block pagecontent
	//- +mob-mnu()

	main
		+page-head({
			items: ['Объекты', 'ЖК видный', 'Дом №1'],
			edit: {},
			t: 'Дом №1',
			badge: '33%',
			stat: ' ',
			date: ' ',
		})
		+sObjectDetails()
			+e.header
				+detailsWithToggle()
					mixin item(key, val, warning)
						+e.col.col-md-auto
							+e.item
								span!= key
								p(class=(warning ? 'text-danger' : ''))
									if warning
										+icon("warning")
									!= val
					+e.stats-row--without-span.row
						+item('Этаж', '7 эт')
						+item('Квартиры', '728 кв')
						+item('Помещения', '1350 пом')
						+item('Площадь', 'S 3440 м²')
				+e.row.row
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Стяжка пола', '22%', '#467CF4')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Натяжка потолка', '63%', '#1DBA6F')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Штукатурка стен', '90%', '#F4B13E')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Шпаклевка стен', '33%', '#9A52DF')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Затирка', '100%', '#E94410')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Плинтус', '3%', '#8B9298')

						
		.container-fluid.mt-4
			+toggleBlock()

