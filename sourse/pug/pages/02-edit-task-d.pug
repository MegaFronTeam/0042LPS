extends ../layout/main.pug

include ../blocks/sCreateObject/_sCreateObject.pug
 
//- include ../blocks/sContact/_sContact.pug
//- include ../blocks/sForm/_sForm.pug
//- include ../blocks/sForm/_sForm.pug
//- include ../blocks/sCatalog/_sCatalog.pug

block variables
	- let  mainPage= 'createObject-page' 
	- let  bg= 'main.jpg'
	- let  createObject = true

block title
	- let  title= 'Создание объекта'
	title= title
block pagecontent
	//- +mob-mnu()
	main
		+sCreateObject({
			status: {
				title: 'Статус задачи',
				def: false,
			},
			workers: true,
			startDate: true,
			endDate: true,
			author: true,
			dateCreate: true,
			dateEdit: true,
			btns: true
		})
			h2 Редактирование задачи
			+b.form-wrap
				+e.main-row.row
					.col-12
						+b.custom-select-wrap--third-type
							select(class="basic-select basic-select--js" data-placeholder='Выберите наименование работы')
								option
								-for(let i = 1; i <= 10; i++)
									option!= i
					.col-12
						+e.input-wrap.form-group
							label
								+e.INPUT.input.form-control(name='Количество слоев' type='text' placeholder='Количество слоев')
								+e.SPAN.input-title Количество слоев
					.col-12
						+e.input-wrap.form-group
							label
								+e.INPUT.input.form-control(disabled name='Требуемый материал' type='text' placeholder='Требуемый материал')
								+e.SPAN.input-title Требуемый материал
					.col-12
						+input('Введите описание объекта', 'textarea')
					.col-12
						+b.plan-block
							img.res-i(src="img/plan-d.png", alt="")
							+e.info
								p.row
									span.col Площадь
									span.col-auto 32
								p.row
									span.col Площадь стен
									span.col-auto 324
								p.row
									span.col Площадь потолка
									span.col-auto 322
								p.row
									span.col Площадь пола
									span.col-auto 322
		.close-btn: +icon('close')
      



