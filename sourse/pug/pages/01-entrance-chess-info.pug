extends ../layout/main.pug

include ../blocks/sObject/_sObject.pug

//- include ../blocks/sContact/_sContact.pug
//- include ../blocks/sForm/_sForm.pug
//- include ../blocks/sForm/_sForm.pug
include ../blocks/sCatalog/_sCatalog.pug
include ../blocks/sObjectDetails/_sObjectDetails.pug
include ../blocks/sMainInfo/_sMainInfo.pug

block variables
	- let  mainPage= 'entrance-chess-info-page' 
	- let  bg= '01-3-house.jpg'
	- let createObject = true

block title
	- let  title= 'Квартира №32'
	title= title
block pagecontent
	//- +mob-mnu()
	a.go-back(href='#')
		+icon('chevron-left')
		span Назад
	main
		+page-head({
			t: 'Квартира №32',
			badge: '33%',
			stat: ' ',
			date: true
		})
		+sObjectDetails()
			+e.header
				+detailsWithToggle()
					mixin item(key, val, warning)
						+e.col.col-md-auto
							+e.item
								span!= key
								p(class=(warning ? 'text-danger' : ''))
									if warning
										+icon("warning")
									!= val
					+e.stats-row--without-span.row
						+item('Помещения', '1350 пом')
						+item('Площадь', 'S 3440 м²')
				+e.row.row
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Стяжка пола', '22%', '#467CF4')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Натяжка потолка', '22%', '#1DBA6F')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Штукатурка стен', '22%', '#F4B13E')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Шпаклевка стен', '22%', '#9A52DF')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Затирка', '22%', '#E94410')
					.col-sm-6.col-lg-4.col-xl-3
						+workStatus('Плинтус', '22%', '#8B9298')
		+sMainInfo6
			h4 Помещения
			+mainTable()
				+firstLevel('1. Кухня', '-', '-', '-', '-', '1300 м²', 321, '/433', '67%', '11 ноя 23 – 11 фев 24', false, false)
				+firstLevel('2. Спальня', '-', '-', '-', '-', '1300 м²', 321, '/433', '67%', '11 ноя 23 – 11 фев 24', false, false)
				+firstLevel('3. Санузел', '-', '-', '-', '-', '1300 м²', 321, '/433', '67%', '11 ноя 23 – 11 фев 24', false, false)
				+firstLevel('4. Спальня', '-', '-', '-', '-', '1300 м²', 321, '/433', '67%', '11 ноя 23 – 11 фев 24', false, false)
			h4 Задачи
			+mainTable2('', 'true')
					